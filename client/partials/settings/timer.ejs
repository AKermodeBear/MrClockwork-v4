

<div class="form-group row">
    <label for="input_timer" class="col-sm-2 col-form-label">Turn Timer</label>
    <div class="col-sm-10 flex_container_row flex_justify_start">

        <div class="margin_right_sm flex_container_row flex_justify_start">
            <input class="margin_right_sm" type="number" id="input_timer_days" name="timerDays" min="0" max="2" pattern="[0-9]|1[0-9]|2[0-3]"
                <% if (typeof gameSettings === "object" && typeof gameSettings.timer === "object" && typeof gameSettings.timer.days === "number") { %> value=<%=gameSettings.timer.days %> <% } else { %> value="1" <% } %>
            >
            <label for="input_timer_days">Days</label>
        </div>
        
        <div class="margin_right_sm flex_container_row flex_justify_start">
            <input class="margin_right_sm" type="number" id="input_timer_hours" name="timerHours" min="0" max="23" pattern="[0-9]|1[0-9]|2[0-3]"
                <% if (typeof gameSettings === "object" && typeof gameSettings.timer === "object" && typeof gameSettings.timer.hours === "number") { %> value=<%=gameSettings.timer.hours %> <% } else { %> value="12" <% } %>
            >
            <label for="input_timer_hours">Hours</label>
        </div>

        <div class="margin_right_sm flex_container_row flex_justify_start">
            <input class="margin_right_sm" type="number" id="input_timer_minutes" name="timerMinutes" min="0" max="59" pattern="[0-9]|1[0-9]|2[0-9]|3[0-9]|4[0-9]|5[0-9]"
                <% if (typeof gameSettings === "object" && typeof gameSettings.timer === "object" && typeof gameSettings.timer.minutes === "number") { %> value=<%=gameSettings.timer.minutes %> <% } else { %> value="0" <% } %>
            >
            <label for="input_timer_minutes">Minutes</label>
        </div>

    </div>
</div>