<hr class="cwHR" />

<div class="row">
    <legend class="pt-0 cwLegend">Turn Timer</legend>
</div>

<div  class="row mb-2 cwTableRow">

    <div class="col-sm-3">
        <label for="input_timer_days" class="form-label">Days</label>
        <div class="w-auto">
            <input class="form-control" type="number" id="input_timer_days" name="timerDays" min="0" max="2" pattern="[0-9]|1[0-9]|2[0-3]"
            <% if (typeof gameSettings === "object" && typeof gameSettings.timer === "object" && typeof gameSettings.timer.days === "number") { %> value=<%=gameSettings.timer.days %> <% } else { %> value="1" <% } %>
            >
        </div>
    </div>

    <div class="col-sm-3">
        <label for="input_timer_hours" class="form-label">Hours</label>
        <div class="w-auto">
            <input class="form-control" type="number" id="input_timer_hours" name="timerHours" min="0" max="23" pattern="[0-9]|1[0-9]|2[0-3]"
            <% if (typeof gameSettings === "object" && typeof gameSettings.timer === "object" && typeof gameSettings.timer.hours === "number") { %> value=<%=gameSettings.timer.hours %> <% } else { %> value="12" <% } %>
            >
        </div>
    </div>
    
    <div class="col-sm-3">
        <label for="input_timer_minutes" class="form-label">Minutes</label>
        <div class="w-auto">
            <input class="form-control" type="number" id="input_timer_minutes" name="timerMinutes" min="0" max="59" pattern="[0-9]|1[0-9]|2[0-9]|3[0-9]|4[0-9]|5[0-9]"
            <% if (typeof gameSettings === "object" && typeof gameSettings.timer === "object" && typeof gameSettings.timer.minutes === "number") { %> value=<%=gameSettings.timer.minutes %> <% } else { %> value="0" <% } %>
            >
        </div>
    </div>

</div>

